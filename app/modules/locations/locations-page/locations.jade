// Page Content
.content.content-boxed
  .row.font-s13
    .col-sm-12
      g-map
    //(ng-if="$ctrl.isCreateNewLocations")
    .col-sm-12
      a#add_location.block.block-link-hover2.button-pointer(ng-click='$ctrl.makeNew()')
        .block-content.block-content-full.bg-flat.clearfix
          i.si.si-plus.fa-2x.text-white.pull-right
