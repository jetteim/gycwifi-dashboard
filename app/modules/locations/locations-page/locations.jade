          span.h4.text-white-op {{'general.forms.add-button.new-location' | translate}}
    .col-xs-6.col-xs-6_xxs.col-sm-6.col-lg-4(ng-repeat='location in $ctrl.locations')
      a.block.block-link-hover3(ui-sref='dashboard.location({slug:location.slug})')
        location-card(location='location')
  hr
