//Page Content
.content.content-boxed
  .row.font-s13

    .col-sm-12
      a.block.block-link-hover2.button-pointer(ng-click="$ctrl.makeNew()")
        .block-content.block-content-full.bg-flat.clearfix
          i.si.si-plus.fa-2x.text-white.pull-right
          span.h4.font-w700.text-white.
            {{'general.forms.add-button.add' | translate}}
          span.h4.text-white-op.
            {{'general.forms.add-button.new-brand' | translate}}

    .col-xs-6.col-xs-6_xxs.col-sm-6.col-lg-4(ng-repeat="brand in $ctrl.brands")
      a.block.block-link-hover3(ui-sref="dashboard.brand({brandId:brand.id})")
        brand-card(brand="brand")
  hr

  .row
    .col-md-6.col-md-offset-4
      //Disabled and Active States
      .block-content
        uib-pagination(items-on-page="$ctrl.itemsOnPage" total-items="$ctrl.totalItems" on-change="$ctrl.changePageHandler")
