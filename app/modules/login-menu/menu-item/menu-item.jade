.form-group(style="margin: 0")
  .col-xs-12
    label {{'loginMenu.url' | translate}}:
    input.form-control.form-control_xs.form-control_black(type='text', ng-model="$ctrl.menuItem.url")
  .col-xs-12
    label {{'loginMenu.title_ru' | translate}}:
    input.form-control.form-control_xs.form-control_black(type='text', ng-model="$ctrl.menuItem.title_ru")
  .col-xs-12
    label {{'loginMenu.title_en' | translate}}:
    input.form-control.form-control_xs.form-control_black(type='text', ng-model="$ctrl.menuItem.title_en")
  .col-xs-12(style="padding-top: 10px; text-align: right")
    span.btn-xs.btn-primary.button-pointer(style="display: inline-block", ng-click="$ctrl.update()") {{'general.update' | translate}}
    span.btn-xs.btn-danger.button-pointer(style="display: inline-block; margin-left: 10px", ng-click="$ctrl.remove()") {{'general.delete' | translate}}
