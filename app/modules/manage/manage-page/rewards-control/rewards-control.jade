table.table-responsive.js-table-sections.table.table-hover.table-condensed
  thead
    tr
      th(style='width: 35%;')
        | {{ 'manage-page.reward.username' | translate }}
      th(style='width: 35%;')
        | {{ 'manage-page.reward.email' | translate }}
      th(style='width: 10%;')
        | {{ 'manage-page.reward.promocode' | translate }}
      th(style='width: 10%;')
        | {{ 'manage-page.reward.reward' | translate }}
      th(style='width: 10%;')
        | {{ 'manage-page.reward.payed' | translate }}
  tbody.js-table-sections-header
    tr(ng-repeat='reward in $ctrl.rewards')
      td(style='width: 35%;')
        | {{ reward.user.username }}
      td(style='width: 35%;')
        | {{ reward.user.email }}
      td(style='width: 10%;')
        | {{ reward.user.promo_code.code }}
      td.text-center(style='width: 10%;')
        | {{ reward.amount | currency : "â‚½ " }}
      td(style='width: 10%;')
        i.fa(ng-class="reward.status_cd ==  1 ? 'fa-check'  : 'fa-close';")
.content.text-center
  uib-pagination(items-on-page="$ctrl.itemsOnPage" total-items="$ctrl.totalItems" on-change="$ctrl.changePageHandler")
