breadcrumbs
basicstats
.content.content-boxed
  // Help slider and service buttons
  //(ng-if="$ctrl.isCreateNewRouters")
  .col-sm-12
    a#add_router.block.block-link-hover2(ng-click='$ctrl.makeNew()')
      .block-content.block-content-full.bg-flat.clearfix
        i.si.si-plus.fa-2x.text-white.pull-right
        span.h4.font-w700.text-white
          | {{'general.forms.add-button.add' | translate}}
        span.h4.text-white-op
          | {{'general.forms.add-button.new-router' | translate}}
  // Routers list
  .col-sm-12
    .block
      .block-content
        table.js-table-sections.table.table-hover
          thead
            tr
              th(style='width: 30px;')
              th
                | {{ 'routers.serial' | translate }}
              th(style='width: 10%;')
                | {{ 'routers.status' | translate }}
              th(style='width: 30%;')
                | {{ 'routers.comment' | translate }}
              th(style='width: 30%;')
                | {{ 'routers.settings' | translate }}
              th(style='width: 30%;')
                | {{ 'routers.edit' | translate }}
          // First TBody (header)
          tbody.js-table-sections-header(ng-repeat-start='router in $ctrl.routers')
            tr
              td.text-center
                i.fa.fa-angle-right
              td.font-w600
                | {{ router.serial }}
              td
                // <span class="label" label="{{router.status}}" set-label-status>
                // {{ router.status }}
                // </span>
                span.fa.fa-check.font_green.router-status.inline_hide(ng-class="{'inline_show' : router.status === true}")
                span.fa.fa-remove.font_red.router-status.inline_hide(ng-class="{'inline_show' : router.status === false}")
              td.font-w600
                | {{ router.comment }}
              td
                a.btn.btn-xs.btn-success.push-5-r.push-10.router-settings(href='http://api.gycwifi.com/router_files/{{router.common_name}}/{{router.common_name}}.zip', onclick="ga('send', 'event', 'dashboard', 'router', 'settings')")
                  i.fa.fa-rocket
                  |                   {{ router.common_name }}
              td
                a.btn.btn-xs.btn-primary.push-5-r.push-10.router-edit(ui-sref='dashboard.router({id:router.id})')
                  i.fa.fa-edit
                  |                   {{ 'routers.edit' | translate }}
          // Second TBody (data)
          tbody(on-finish-render='ngRepeatFinished', ng-repeat-end='')
            tr
              td.text-center
              td.font-w600.text-success
                | {{ 'routers.router-local-ip' | translate }}
              td(colspan='3')
                small.text-muted.text-center
                  | {{ router.router_local_ip }}
            tr
              td.text-center
