@import './oneui-theme.styl'

.form-control_black
  color rgb(70,70,70)

.main-content-wrap
  background-color #f5f5f5

.modal-content
  border-radius 5px

a.logo-link
  display inline-block

.fa-smile-o_feedback,
.fa-frown-o_feedback
  font-size 1.4em
  margin-right 8px

.fa-smile-o_green
  color #388E3C

.fa-frown-o_yellow
  color #FBC02D

.fa_hide
  display none

.fa-show
  display inline-block

.gyc-logo
  display inline-block

.gyc-logo_sm
  width 35px
  margin-top -11px

.side-header
  text-align center

.padding-6
  padding 6px 6px

body
  position absolute
  height 100%
  width 100%

button.router-settings
  margin-bottom 0 !important

.item-circle
  overflow hidden

.client-avatar
  width 100%

basicstats > div
  min-height 138px

.panel-heading
  cursor pointer

.text-nowrap
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.showSweetAlert
  margin-left 0
  top 40%
  left calc(50% - 239px)
  background-color rgba(37, 40, 47, .9)

.sweet-alert h2
  color rgb(255,255,255)

.sweet-alert p
  color rgb(220,220,220)

.form-preloader
  display inline-block

.font_green
  color #46c37b

.font_red
  color #ff6b6b

.inline_hide
  display none

.inline_show
  display inline-block

.color-white
  color white

.mr-left-8
  margin-left 8px

.sweet-alert .sa-icon.sa-successafter, .sweet-alert .sa-icon.sa-successbefore
  background-color transparent

.sweet-alert .sa-icon.sa-success .sa-fix
  background-color transparent

.ng-messages
  padding-right 0
  /*padding-left 20px*/
  color #ff8f8f

.ng-messages > p
  margin-bottom 0
  text-align left

.client_block
  min-height 300px

.block.block-margin-10
  margin-bottom 10px

.button-pointer
  cursor pointer

#locations-select
  color rgb(70, 70, 70)

.or-sign-in-up
  display inline-block
  margin-bottom 16px
  color #fff
  font-size 1.1em

brand-card
  display block

.img-responsive
  min-height auto
  height 300px
  padding 20px

.card-promo-text,
.card-promo-title
  text-align left
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
.sa-icon.sa-success.animate::after,
.sa-icon.sa-success.animate::before
  background transparent

.table > thead > tr > th.sort
  padding-right 14px

.sort
  position relative
  cursor pointer

.icon-sort
  position absolute
  right 2px
  top calc(50% - 4px)
  font-size .8em
  margin-left 4px
  color #7c7c7c

.fa-16
  font-size 1.6em

.custom-line
  line-height .7

.table-opinion__tr
  width 100%

.table_opinion__th,
.table_opinion__td
  width 30%
  text-align center

.table_opinion__td
  //text-overflow ellipsis
  //overflow hidden
  //white-space nowrap

.table_opinion__th_left,
.table_opinion__td_left
  width 30%
  text-align left

.table_opinion__th_right,
.table_opinion__td_right
  text-align right

.answer-statistic-table
  max-height 300px
  overflow-y scroll

.img-responsive
  &_fix
    height inherit

@media (max-width: 520px)
  .col-xs-6_xxs
    width 100%